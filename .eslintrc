{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "classes": true,
      "jsx": true
    }
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "plugins": ["import", "react"],
  "extends": ["airbnb/base", "eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "semi": ["error"],
    "no-unused-vars": ["error", { "vars": "all", "args": "all", "argsIgnorePattern": "^_"}],
    "react/no-multi-comp": ["warn", {"ignoreStateless": true}],
    "react/no-danger": ["off"],
    "comma-dangle": ["off"],
    "no-console": ["warn"]
  }
}